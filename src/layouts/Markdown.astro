---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <main>
    <h1>{frontmatter.title}</h1>
    <slot />
  </main>
</Layout>

<style is:global>
  main {
    display: flex;
    flex-direction: column;
    font-family: monospace;
  }

  main img {
    margin: 2rem 0;
    height: 30rem;
  }

  strong {
    font-weight: 900;
  }
</style>
