---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    font-size: 18px;

    --main-bg-color: #ffadbc;
    --main-text-color: rgb(36, 36, 36);
  }

  * {
    box-sizing: border-box;
  }

  html,
  body {
    height: 100%;
    background-color: var(--main-bg-color);
  }

  body {
    padding: 2rem;
    color: var(--main-text-color);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0.3rem 0;
    font-size: 1rem;
    font-weight: 600;
  }

  main {
    display: flex;
    flex-direction: column;
    font-family: monospace;
  }
</style>
